<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_songs">

    <fragment
        android:id="@+id/navigation_playing"
        android:name="com.example.finalproject.ui.playing.PlayingFragment"
        android:label="@string/title_playing"
        tools:layout="@layout/fragment_playing" />

    <fragment
        android:id="@+id/navigation_songs"
        android:name="com.example.finalproject.ui.songs.SongsFragment"
        android:label="@string/title_songs"
        tools:layout="@layout/fragment_songs" />

    <fragment
        android:id="@+id/navigation_playlists"
        android:name="com.example.finalproject.ui.playlists.PlaylistsFragment"
        android:label="@string/title_playlists"
        tools:layout="@layout/fragment_playlists" />

    <fragment
        android:id="@+id/navigation_feed"
        android:name="com.example.finalproject.ui.feed.FeedFragment"
        android:label="@string/title_feed"
        tools:layout="@layout/fragment_feed" />
</navigation>
